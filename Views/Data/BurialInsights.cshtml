@{
    ViewData["Title"] = "Burial Insights";
}

@model IntexMummy11.Models.ViewModels.BurialViewModel

<div class="text-center">
    <div class="mx-scrollcontainer-top">
        <img class="mx-image mx-name-image1 img-responsive" src="~/img/EgyptPic.jpg" role="presentation" width="100%" border="0">
    </div>
    <h3>Welcome to the Burial Insights Page</h3>
    <p>
        Here, view an unsupervised analysis report on the connection between depth and position of tombs with age
        Or our awesome data
    </p>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Head Direction</th>
                <th>Depth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Burialmain b in Model.Burials)
            {
                <tr>
                    <td>@b.Headdirection</td>
                    <td>@b.Depth</td>
                </tr>
            }
        </tbody>
    </table>
</div>